{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "package.json": [
                "app/package.json"
            ],
            "@assets/*": [
                "app/assets/*"
            ],
            "@common/*": [
                "app/src/common/*"
            ],
            "@app-utils/*": [
                "app/src/main/utils/*"
            ],
            "@view-utils/*": [
                "app/src/renderer/utils/*"
            ],
            "@view-logic/*": [
                "app/src/renderer/logic/*"
            ],
            "@components/*": [
                "app/src/renderer/components/*"
            ],
            "*": ["build/node_modules/*"]
        }
    }
}
