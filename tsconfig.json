{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@logic/*": [
                "app/src/renderer/logic/*"
            ],
            "@components/*": [
                "app/src/renderer/components/*"
            ],
            "@assets/*": [
                "app/assets/*"
            ],
            "*": ["build/node_modules/*"]
        }
    }
}
